.weToast-container {
  position: fixed;
  bottom: -100px;
  max-height: 80px;
  width: 100%;
  background: transparent;
  display: flex;
  justify-content: center;
  z-index: 999;
  opacity: 0;
}
.weToast-box {
  width: 200px;
  background-color: rgba(76, 175, 80, 0.9);
  padding: 10px;
  border-radius: 5px;
  border: 1px solid #DDD;
  box-shadow: 0px 2px 10px 3px rgba(200,200,200,0.7);
  display: flex;
  flex-direction: row;
}
.weToast-box-hover {
  opacity: 0.8;
}
.weToast-box-r {
  flex: 1;
}
.weToast-box-l {
  margin-right: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.weToast-title {
  font-size: 16px;
  font-weight: bold;
  color: #FFF;
}
.weToast-content {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
  line-height: 20px;
}
.weToast-icon {
  width: 20px;
  height: 20px;
  border-radius: 10px;
}