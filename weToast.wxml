<!--提示卡片模版-->
<view
  class="weToast-container"
  animation="{{ weToastAnimation }}">
  <view
    class="weToast-box"
    style="background-color: {{ weToastBoxBG }}">
    <view class="weToast-box-l">
      <image src="data:image/png;base64,{{ weToastIcon }}" class="weToast-icon"></image>
    </view>

    <view class="weToast-box-r">
      <view class="weToast-title" wx:if="{{ !!weToastTitle }}">
        {{ weToastTitle }}
      </view>
      <view class="weToast-content">{{ weToastContent }}</view>
    </view>
  </view>
</view>